<Page
    x:Class="NoiseBackendExample.CommentListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Back Button -->
        <StackPanel Grid.Row="0" Padding="20">
            <Button x:Name="BackButton" 
                    Content="â† Back to Stories" 
                    Click="BackButton_Click"
                    Margin="0,0,0,10"/>
            <TextBlock Text="Comments" 
                       Style="{StaticResource TitleTextBlockStyle}"/>
            <ProgressRing x:Name="LoadingRing" 
                          IsActive="True" 
                          Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Comment List -->
        <ListView x:Name="CommentListView" 
                  Grid.Row="1"
                  ItemsSource="{x:Bind Comments}"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="16" Margin="8" 
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                          CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="{Binding Text}" 
                                       TextWrapping="Wrap"
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                            <TextBlock Margin="0,8,0,0"
                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}">
                                <Run Text="By "/>
                                <Run Text="{Binding Author}"/>
                                <Run Text=" on "/>
                                <Run Text="{Binding Timestamp}"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
